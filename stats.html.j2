<!DOCTYPE html>
<html lang="en">
<head>
    <title>Ping Stats</title>
    <meta charset="UTF-8">
    <link href="https://fonts.googleapis.com/css?family=Raleway:300,400,700"
          rel="stylesheet" type="text/css">
    <meta http-equiv="refresh" content="20"/>
    <style>
        body {
            color: #212121;

            font-family: "Raleway", sans-serif;
            background-color: #FEFEFE;
        }

        table, td, tr {
            border-spacing: 0;
        }

        th, td {
            padding: 6px;
        }

        tbody > tr:nth-child(odd) {
            background-color: #EAEAEA;
        }
    </style>
</head>
<body>
    <table>
        <thead>
            <tr>
                <th rowspan="2">Ping server</th>
                <th rowspan="2">Average</th>
                <th colspan="{{ pongservers|length }}">Pong server</th>
            </tr>
            <tr>
                {% for server in pongservers %}
                    <th>{{ server }}</th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
            {% for server, ping_server_data in pings.items() %}
                <tr>
                    <th>{{ server }}</th>
                    <td>
                        {{ prettify_diff(ping_server_data.average) }}
                        <sup>{{ ping_server_data.pings|length }}</sup>
                    </td>
                    {% for pongserver in pongservers %}
                        <td>
                            {% if pongserver in ping_server_data.pongs %}
                                {{ prettify_diff(ping_server_data.pongs[pongserver].average) }}
                                <sup>{{ ping_server_data.pongs[pongserver].diffs|length }}</sup>
                            {% endif %}
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <pre><code>{{ raw }}</code></pre>
</body>
</html>
